                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"

                    android:src="@drawable/joystick_left_icon"
                    android:background="@drawable/round_key_button"

                    android:id="@+id/iv_left"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_left"
                    android:padding="10dp"

                    android:inputType="textPersonName"
                    android:imeOptions="actionNext"
                    android:hint="@string/key_pressed"
                    android:textAlignment="center"

                    android:textColor="?android:attr/textColorPrimary"
                    android:textColorHint="?android:attr/textColorHint"

                    android:id="@+id/et_left"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_left"
                    android:layout_below="@+id/et_left"
                    android:padding="10dp"

                    android:inputType="textPersonName"
                    android:imeOptions="actionNext"

                    android:textColor="?android:attr/textColorPrimary"
                    android:textColorHint="?android:attr/textColorHint"
                    android:hint="@string/key_released"
                    android:textAlignment="center"

                    android:id="@+id/et_left_up"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="26dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"

