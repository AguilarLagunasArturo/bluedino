                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_a"
                    android:layout_below="@+id/et_a"
                    android:padding="10dp"

                    android:inputType="textPersonName"
                    android:imeOptions="actionNext"

                    android:textColor="?android:attr/textColorPrimary"
                    android:textColorHint="?android:attr/textColorHint"
                    android:hint="@string/key_released"
                    android:textAlignment="center"

                    android:id="@+id/et_a_up"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="26dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"

                    android:src="@drawable/joystick_play"
                    android:background="@drawable/round_button"

                    android:id="@+id/iv_start"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_start"
                    android:padding="10dp"

                    android:inputType="textPersonName"
                    android:imeOptions="actionNext"

                    android:textColor="?android:attr/textColorPrimary"
                    android:textColorHint="?android:attr/textColorHint"
                    android:hint="@string/key_pressed"
                    android:textAlignment="center"

                    android:id="@+id/et_start"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_start"
                    android:layout_below="@+id/et_start"
                    android:padding="10dp"

                    android:inputType="textPersonName"
                    android:imeOptions="actionNext"

                    android:textColor="?android:attr/textColorPrimary"
                    android:textColorHint="?android:attr/textColorHint"
                    android:hint="@string/key_released"
                    android:textAlignment="center"

                    android:id="@+id/et_start_up"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="70dp">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"

                    android:src="@drawable/joystick_stop"
                    android:background="@drawable/round_button"

                    android:id="@+id/iv_stop"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_stop"
                    android:padding="10dp"

                    android:inputType="textPersonName"
                    android:imeOptions="actionNext"

                    android:textColor="?android:attr/textColorPrimary"
                    android:textColorHint="?android:attr/textColorHint"
                    android:hint="@string/key_pressed"
                    android:textAlignment="center"

                    android:id="@+id/et_stop"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/iv_stop"
                    android:layout_below="@+id/et_stop"
                    android:padding="10dp"

